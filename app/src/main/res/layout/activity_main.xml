<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="BS"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:id="@+id/textView" android:textSize="30sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"/>
    <EditText
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/bsEntry_text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>
    <RadioGroup
            android:layout_width="117dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/radioGroup"
            app:layout_constraintStart_toEndOf="@+id/bsEntry_text" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.493">
        <RadioButton
                android:text="No Rerolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollNone_radio" android:layout_weight="1"/>
        <RadioButton
                android:text="Reroll 1's"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollOne_radio" android:layout_weight="1"/>
        <RadioButton
                android:text="Reroll Misses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollMiss_radio" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:layout_width="174dp"
            android:layout_height="20dp"
            android:text="0.5"
            android:id="@+id/textview_calculate"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/bsEntry_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Strength"
            android:layout_width="62dp"
            android:layout_height="28dp"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textview_calculate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_calculate"/>
    <TextView
            android:text="Tough"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="49dp"
            android:layout_height="29dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/editText2"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/radioGroup2">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="AP"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:id="@+id/AP" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:text="Save"
            android:layout_width="35dp"
            android:layout_height="31dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/AP"/>
    <EditText
            android:layout_width="58dp"
            android:layout_height="38dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toEndOf="@+id/AP" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <EditText
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/editText4" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.528"
            app:layout_constraintVertical_bias="0.041">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton5" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton6" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton4" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="TextView"
            android:layout_width="181dp"
            android:layout_height="19dp"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintEnd_toStartOf="@+id/radioGroup2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="192dp"
            android:layout_height="20dp"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>