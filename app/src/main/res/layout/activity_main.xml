<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="BS"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:id="@+id/textView" android:textSize="30sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"/>
    <EditText
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/bsEntry_text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>
    <RadioGroup
            android:layout_width="117dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toHit_radioGroup"
            app:layout_constraintStart_toEndOf="@+id/bsEntry_text" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.566">
        <RadioButton
                android:text="No Rerolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollHitNone_radio" android:layout_weight="1"/>
        <RadioButton
                android:text="Reroll 1's"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollHitOne_radio" android:layout_weight="1"/>
        <RadioButton
                android:text="Reroll Misses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollHitMiss_radio" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:layout_width="174dp"
            android:layout_height="20dp"
            android:text="0.5"
            android:id="@+id/toHit_textView"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/bsEntry_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Strength"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:id="@+id/textView3"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/toHit_textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="55dp"
            android:layout_height="39dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/strEntry_text"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/toHit_textView"/>
    <TextView
            android:text="Tough"
            android:layout_width="62dp"
            android:layout_height="41dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="52dp"
            android:layout_height="39dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/touEntry_text"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/strEntry_text"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/touEntry_text"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/toHit_radioGroup" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/toWound_radioGroup" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0">
        <RadioButton
                android:text="No Rerolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollWoundNone_radio" android:layout_weight="1"/>
        <RadioButton
                android:text="Reroll 1's"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rerollWoundOne_radio" android:layout_weight="1"/>
        <RadioButton
                android:text="Reroll Misses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rerollWoundMiss_radio" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="AP"
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:id="@+id/AP" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/toWound_textView"/>
    <TextView
            android:text="Save"
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/AP"/>
    <EditText
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/apEntry_text"
            app:layout_constraintStart_toEndOf="@+id/AP" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/toWound_textView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.12"/>
    <EditText
            android:layout_width="53dp"
            android:layout_height="39dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/svEntry_text"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/apEntry_text" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.097"/>
    <TextView
            android:text="0.5"
            android:layout_width="179dp"
            android:layout_height="24dp"
            android:id="@+id/toWound_textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/touEntry_text"
            app:layout_constraintEnd_toStartOf="@+id/toWound_radioGroup"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="192dp"
            android:layout_height="20dp"
            android:id="@+id/toSave_textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/svEntry_text"
    />
    <TextView
            android:text="0.125"
            android:layout_width="375dp"
            android:layout_height="21dp"
            android:id="@+id/total_textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toSave_textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.035"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>